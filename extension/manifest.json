{
  "manifest_version": 3,
  "name": "AutoPlay Video Control - Easy Kit",
  "version": "2.0.0",
  "description": "Add a sleep timer to Netflix, YouTube, Disney+, and more. Set a timer, video auto-pauses. Stop binge-watching, sleep better.",
  "author": "KC",
  "homepage_url": "https://github.com/kinect3/AutoPlayVideo",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'"
  },
  "permissions": ["storage", "alarms", "scripting", "notifications", "activeTab", "contextMenus"],
  "host_permissions": [
    "*://*.netflix.com/*",
    "*://*.youtube.com/*",
    "*://*.disneyplus.com/*",
    "*://*.max.com/*",
    "*://*.hbomax.com/*",
    "*://*.primevideo.com/*",
    "*://*.amazon.com/*",
    "*://*.crunchyroll.com/*",
    "*://*.twitch.tv/*",
    "*://*.hulu.com/*",
    "https://viboot.onrender.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.youtube.com/*",
        "*://*.crunchyroll.com/*",
        "*://*.disneyplus.com/*",
        "*://*.max.com/*",
        "*://*.hbomax.com/*",
        "*://*.primevideo.com/*",
        "*://*.amazon.com/gp/video/*",
        "*://*.twitch.tv/*",
        "*://*.hulu.com/*"
      ],
      "js": ["content/streaming-controller.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AutoPlay Video Control",
    "default_icon": {
      "16": "assets/icons/favicon-16x16.png",
      "32": "assets/icons/favicon-32x32.png",
      "192": "assets/icons/android-chrome-192x192.png",
      "512": "assets/icons/android-chrome-512x512.png"
    }
  },
  "options_page": "settings/settings.html",
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "assets/icons/favicon-16x16.png",
    "32": "assets/icons/favicon-32x32.png",
    "48": "assets/icons/favicon-32x32.png",
    "128": "assets/icons/android-chrome-192x192.png"
  }
}